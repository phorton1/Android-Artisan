    </stateVariable>
    <stateVariable>
      <name>LastChange</name>
      <dataType>string</dataType>
      <sendEvents>yes</sendEvents>
    </stateVariable>
    <stateVariable>
      <name>A_ARG_TYPE_Channel</name>
