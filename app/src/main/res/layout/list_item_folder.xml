<prh.artisan.listItemFolder
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_folder"
    android:layout_width="match_parent"
    android:layout_height="52dip">

    <RelativeLayout
        android:id = "@+id/list_item_folder_icon_container"
        android:layout_centerVertical="true"
        android:layout_marginRight="9dip"
        android:layout_width="48dip"
        android:layout_height="48dip">

        <ImageView
            android:id = "@+id/list_item_folder_icon"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dip"
            android:layout_width="24dip"
            android:layout_height="24dip"/>
    </RelativeLayout>


    <RelativeLayout
        android:id = "@+id/list_item_folder_info_container"
        android:layout_toRightOf="@id/list_item_folder_icon_container"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id = "@+id/list_item_folder_title"
            android:textColor="#ffffff"
            android:textSize="16dip"
            android:layout_marginTop="-2dip"
            android:layout_alignParentLeft="true"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content" />

        <TextView
            android:id = "@+id/list_item_folder_artist"
            android:textColor="#aaaaaa"
            android:textSize="12dip"
            android:layout_marginTop="-4dip"
            android:layout_below="@id/list_item_folder_title"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content" />

    </RelativeLayout>

    <!--TextView
        android:id = "@+id/list_item_folder_num_elements"
