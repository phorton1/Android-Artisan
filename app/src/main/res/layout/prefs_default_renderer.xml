<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id = "@+id/pref_default_renderer_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:text = "Default Renderer"
        android:layout_alignParentLeft="true">
    </TextView>

    <TextView
        android:id="@+id/pref_default_renderer_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dip"
        android:layout_alignParentRight="true">
    </TextView>

    <RelativeLayout
        android:id = "@+id/pref_default_renderer_layout"
        android:layout_below = "@id/pref_default_renderer_value"
        android:layout_width="match_parent"
        android:paddingBottom="12dip"
        android:layout_height="wrap_content" >

        <Button
            android:id = "@+id/clear_default_renderer"
            android:text = "Clear"
            android:textSize="12dip"
            android:layout_marginLeft="160dip"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="36dip" />

        <Button
            android:id = "@+id/set_default_renderer"
            android:textSize="12dip"
            android:layout_width="wrap_content"
            android:layout_height="36dip"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@id/clear_default_renderer"/>


    </RelativeLayout>
</RelativeLayout>