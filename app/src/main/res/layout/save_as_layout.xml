<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="128dip">
        <!--
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        -->

        <RelativeLayout
            android:id="@+id/saveas_dialog_topline"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="20dip"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/saveas_dialog_prompt"
                android:text="prompt"
                android:textSize="18dip"
                android:layout_marginTop="7dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/saveas_dialog_combo"
                android:layout_toRightOf="@id/saveas_dialog_prompt"
                android:textSize="18dip"
                android:visibility="gone"
                android:layout_marginLeft="12dip"
                android:layout_width="200dip"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/saveas_dialog_value"
                    android:text="value"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/saveas_dialog_dropdown_button"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/my_dropdown_ic_arrow_normal_holo_dark"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:layout_width="30dip"
                    android:layout_height="30dip"  />
            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@id/saveas_dialog_topline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/saveas_dialog_ok"
                android:enabled="false"
                android:layout_toRightOf="@+id/saveas_dialog_middle"
                android:text="OK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/saveas_dialog_middle"
                android:layout_centerHorizontal="true"
                android:layout_width="2dip"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/saveas_dialog_cancel"
                android:layout_toLeftOf="@+id/saveas_dialog_middle"
                android:text="Cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>

