<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="400dp"
             android:layout_height="match_parent"
             tools:context="prh.artisan.VolumeControl">


    <LinearLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_mute"
                android:text="Mute"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:textSize="16dp"/>
            <Button
                android:id="@+id/button_loud"
                android:text="Loud Off"
                android:layout_marginLeft="20dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:textSize="16dp"/>
            <ImageButton
                android:id="@+id/button_close_volume"
                android:layout_marginLeft="80dp"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src = "@android:drawable/ic_menu_close_clear_cancel"/>

        </LinearLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/slider_vol_label"
                android:text="VOL"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_width="45dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/slider_vol_value"
                android:text="15"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="wrap_content" />
            <SeekBar
                android:id="@+id/slider_vol"
                android:max="15"
                android:layout_toRightOf="@id/slider_vol_label"
                android:layout_toLeftOf="@id/slider_vol_value"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/slider_bal_label"
                android:text="BAL"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_width="45dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/slider_bal_value"
                android:text="28"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="wrap_content" />
            <SeekBar
                android:id="@+id/slider_bal"
                android:max="28"
                android:layout_toRightOf="@id/slider_bal_label"
                android:layout_toLeftOf="@id/slider_bal_value"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/slider_fade_label"
                android:text="FADE"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_width="45dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/slider_fade_value"
                android:text="28"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="wrap_content" />
            <SeekBar
                android:id="@+id/slider_fade"
                android:max="28"
                android:layout_toRightOf="@id/slider_fade_label"
                android:layout_toLeftOf="@id/slider_fade_value"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/slider_bass_label"
                android:text="BASS"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_width="45dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/slider_bass_value"
                android:text="20"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="wrap_content" />
            <SeekBar
                android:id="@+id/slider_bass"
                android:max="20"
                android:layout_toRightOf="@id/slider_bass_label"
                android:layout_toLeftOf="@id/slider_bass_value"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/slider_mid_label"
                android:text="MID"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_width="45dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/slider_mid_value"
                android:text="20"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="wrap_content" />
            <SeekBar
                android:id="@+id/slider_mid"
                android:max="20"
                android:layout_toRightOf="@id/slider_mid_label"
                android:layout_toLeftOf="@id/slider_mid_value"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/slider_high_label"
                android:text="HIGH"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_width="45dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/slider_high_value"
                android:text="20"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="wrap_content" />
            <SeekBar
                android:id="@+id/slider_high"
                android:max="20"
                android:layout_toRightOf="@id/slider_high_label"
                android:layout_toLeftOf="@id/slider_high_value"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
