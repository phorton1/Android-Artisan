<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id = "@+id/pref_default_device_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

    <TextView
        android:id = "@+id/pref_default_device_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_alignParentLeft="true">
    </TextView>

    <TextView
        android:id="@+id/pref_default_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dip"
        android:layout_alignParentRight="true">
    </TextView>

    <RelativeLayout
        android:id = "@+id/pref_default_device_layout"
        android:layout_below = "@id/pref_default_device_name"
        android:layout_width="match_parent"
        android:paddingBottom="12dip"
        android:layout_height="wrap_content" >

        <Button
            android:id = "@+id/pref_set_default_device"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="36dip"
            android:layout_marginLeft="20dip"
            android:textSize="12dip"/>

        <Button
            android:id = "@+id/pref_clear_default_device"
            android:layout_toLeftOf="@id/pref_set_default_device"
            android:layout_width="wrap_content"
            android:layout_height="36dip"
            android:layout_marginLeft="20dip"
            android:text = "Clear"
            android:textSize="12dip"/>

        <Button
            android:id = "@+id/pref_set_default_last_selected"
            android:layout_toLeftOf="@id/pref_clear_default_device"
            android:layout_width="wrap_content"
            android:layout_height="36dip"
            android:layout_marginLeft="20dip"
            android:text = "Last Selected"
            android:textSize="12dip"/>


    </RelativeLayout>
</RelativeLayout>